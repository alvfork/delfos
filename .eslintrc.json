{
    "env": {
      "mocha": true,
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "airbnb-base",
      "prettier",
      "plugin:jsdoc/recommended"
    ],
    "plugins": [
      "prettier",
      "import",
      "jsdoc"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "paths": ["src"]
        }
      }
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "import/prefer-default-export": "off",
      "import/no-named-export": "off",
      "import/export": "off"
    }
}
