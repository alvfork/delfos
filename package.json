{
  "name": "delfos",
  "version": "0.0.0-semantically-released",
  "description": "Tiny set of assertions, useful for common validations",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha --recursive \"src/*$MATCH*/*.test.js\" -w",
    "test:staged": "istanbul cover -x *.test.js _mocha -- -R spec --recursive \"src/*$MATCH*/*.test.js\"",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "check-coverage": "istanbul check-coverage --statements 90 --branches 90 --functions 90 --lines 90",
    "report-coverage": "cat ./coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clustergy/delfos.git"
  },
  "keywords": [
    "delfos",
    "assertions",
    "validations"
  ],
  "author": "Clustergy Development Team <development@clustergy.com> (https://clustergy.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/clustergy/delfos/issues"
  },
  "homepage": "https://github.com/clustergy/delfos#readme",
  "devDependencies": {
    "chai": "4.2.0",
    "codecov.io": "0.1.6",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.18.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "7.2.0",
    "eslint-mdx": "1.8.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-mdx": "1.8.2",
    "eslint-plugin-prettier": "3.3.1",
    "husky": "4.3.8",
    "istanbul": "0.4.5",
    "lint-staged": "10.5.3",
    "mocha": "8.2.1",
    "prettier": "2.2.1",
    "semantic-release": "^17.3.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npx eslint --ext .js",
      "npm run test:staged",
      "npm run check-coverage"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
